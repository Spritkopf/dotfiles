    "hyprland/submap": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", ""],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "clock": {
        // "timezone": "America/New_York",
        "format": "{0:%d.%m.%Y} - {0:%H:%M}",
        "tooltip-format": "{:%Y %B :%Y-%m-%d}",
        "on-click": "gsimplecal"
    },
    // "cpu": {
